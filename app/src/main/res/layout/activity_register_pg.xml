<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uddishverma.pg_app_beta.RegisterPG">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4CC70"
            android:gravity="center"
            android:padding="15dp"
            android:text="PG IMAGES"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4CC70"
            android:gravity="center"
            android:padding="15dp"
            android:text="(Please Upload the PG Images)"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pg_img_one"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_white_48dp" />

            <ImageView
                android:id="@+id/pg_img_two"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_white_48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/cancel_image_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:elevation="5dp"
                android:text="EDIT"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_cancel_white_18dp" />

            <TextView
                android:id="@+id/cancel_image_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:elevation="5dp"
                android:text="EDIT"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_cancel_white_18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/pg_img_three"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_white_48dp" />

            <ImageView
                android:id="@+id/pg_img_four"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_white_48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/cancel_image_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:elevation="5dp"
                android:text="EDIT"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_cancel_white_18dp" />

            <TextView
                android:id="@+id/cancel_image_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:elevation="5dp"
                android:text="EDIT"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_cancel_white_18dp" />
        </LinearLayout>



        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_margin="20dp"
            android:id="@+id/shine_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:big_shine_color="#1A237E"
            app:btn_color="#F4CC70"
            app:btn_fill_color="#1A237E"
            app:click_animation_duration="200"
            app:enable_flashing="false"
            app:shine_animation_duration="1500"
            app:shine_count="8"
            app:shine_distance_multiple="1.5"
            app:shine_turn_angle="10"
            app:siShape="@raw/like"
            app:small_shine_color="@color/colorPrimary"
            app:small_shine_offset_angle="20" />

    </LinearLayout>

</ScrollView>


